<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="customer_car" resource="default" engine="innodb" comment="Customer Selected Car">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="int" name="customer_id" nullable="false" padding="10" unsigned="true" comment="Customer ID"/>
        <column xsi:type="varchar" name="car_id" nullable="true" length="50" comment="Car ID"/>
        <column xsi:type="varchar"  name="image"     nullable="false" length="255" comment="Car Image"/>
        <column xsi:type="datetime" name="added_on"   default="CURRENT_TIMESTAMP" on_update="false" nullable="false" comment="Added On"/>
        <column xsi:type="datetime" name="updated_at"   nullable="true" comment="Updated At"/>
        <column xsi:type="int"  name="year"       nullable="false" padding="10" unsigned="true" comment="Year Made" />
        <column xsi:type="varchar"  name="make"     nullable="false" length="50" comment="Car Make"/>
        <column xsi:type="varchar"  name="model"       nullable="false" length="50" comment="Car Model" />
        <column xsi:type="int"      name="mpg"  nullable="true" unsigned="true" padding="10" comment="Car MPG"/>
        <column xsi:type="decimal"      name="price"  nullable="true"  scale="2" precision="10" unsigned="true" comment="Car Price"/>
        <column xsi:type="int"      name="seats"  nullable="true" unsigned="true" padding="10" comment="Car Seats"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="customer_id">
            <column name="customer_id"/>
        </constraint>
    </table>
</schema>